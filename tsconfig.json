{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./out",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
